{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   
    "title": {
        "text": "Cats & Dogs in the USA",
        "anchor": "middle",
        "fontSize":20
    },

    "data": {
      "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/united-states/us-albers.json",
      "format": {
        "type": "topojson",
        "feature": "us"
        }
    },
    "width": 500,
    "height": 300,
    "projection": {
        "type": "albersUsa"
    },
    "layer": [{

        "description": "map base layer here, not sure what goes in this encoding",
        "mark":{
            "type": "geoshape",
            "stroke": "white",
            "fill": "#69981ddb"
        },
        "encoding":{
            "color": {
                "field":"",
                "type":"quantitative",
                "scale":{
                    "scheme":"lightyellow"
                }
            }
        }
        },
        {
            "description": "add label layer here",
            "data": {
                "url": "",
                "format": {
                    "type":"csv"
                }
            },
            "mark": {
                "type": "text",
                "dx":12,
                "fontStyle":"bold"
            },
            "encoding": {
                "longitude": {
                    "field": "",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "",
                    "type": "quantitative"
                },
                "text":{
                    "field": "",
                    "type": "nominal"
                },
                "size": {"value": 12}
            }
        }
    ],

    "transform": [{
        "lookup": "",
        "from":{
            "data": {
                "url":""
            },
            "key": "",
            "fields": [""]
        }
    }]
      
  }