{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   
    "title": {
        "text": "Cats & Dogs in the USA",
        "anchor": "middle",
        "fontSize":20
    },

    "data": {
      "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/united-states/us-albers.json",
      "format": {
      "type": "topojson",
      "feature": "us"
        }
    },
  
    "projection": {
        "type": "albersUsa"
    },
    
    "width": 700,
    "height": 500,


    "layer": [
        {
            "description": "map base layer here, not sure what goes in this encoding",
            "mark":{
                "type": "geoshape",
                "stroke": "white",
                "fill": "#69981ddb"
            },
            "encoding":{
                "color": {
                    "field":"",
                    "type":"quantitative",
                    "scale":{
                        "scheme":"lightyellow"
                    }
                }
            }
        },
        {
            "description": "add label layer here",
            "mark":"text"
            
        }

    ]
}