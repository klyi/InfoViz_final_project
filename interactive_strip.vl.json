{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url":  "https://raw.githubusercontent.com/klyi/InfoViz_final_project/main/movies_data.csv",
        "format": {
            "type": "csv"
          }
    },
    "width": 1000,
    "height": 50,

    "layer":[{
        "params": [{
            "name":"strip_brush",
            "select":{"type": "interval"}
        }],
        "mark": "tick",
        "encoding": {
            "x": {
                "field": "release_date",
                "type": "temporal",
                "title":"Release Year",
                "sort": {"field": "year", "order": "ascending"},
                "axis":{
                    "gridOpacity":0.4,
                    "labelAngle": 0,
                    "values": ["1936-02-05","1940-02-09", "1956-02-16","1960-10-07", "1970-01-01" ,"1980-01-01", "1990-01-19", "2000-01-12", "2010-01-15", "2019-03-15"],
                    "labelExpr": "year(timeParse(datum.release_date, '%Y-%m/%d'))"

                }
            },
            "color": {
                "condition":{"param": "strip_brush","field": "release_date",
                    "type": "nominal",
                    "legend":null
                },
                "value":"grey"
            }
        }
    }]
}