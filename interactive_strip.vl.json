{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url":  "https://raw.githubusercontent.com/klyi/InfoViz_final_project/main/movies_data.csv",
        "format": {
            "type": "csv"
          }
    },
    "width": 1000,
    "height": 50,

    "layer":[{
        "params": [{
            "name":"strip_brush",
            "select":{"type": "interval"}
        }],
        "mark": "tick",
        "encoding": {
            "x": {
                "field": "release_date",
                "type": "temporal",
                "title":"Release Year",
                "sort": {"field": "year", "order": "ascending"},
                "axis":{
                    "gridOpacity":0.4,
                    "labelAngle": 0,
                    "values": ["2/5/1936","2/9/1940", "2/16/1956","10/7/1960", "1/1/1970" ,"1/1/1980", "1/19/1990", "1/12/2000", "1/15/2010", "3/15/2019"],
                    "labelExpr": "year(timeParse(datum.release_date, '%m/%d/%Y'))"

                }
            },
            "color": {
                "condition":{"param": "strip_brush","field": "release_date",
                    "type": "nominal",
                    "legend":null
                },
                "value":"grey"
            }
        }
    }]
}